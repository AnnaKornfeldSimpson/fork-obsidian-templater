{
    "compilerOptions": {
        "baseUrl": "src",
        "inlineSourceMap": true,
        "inlineSources": true,
        "module": "ESNext",
        "target": "es6",
        "allowJs": false,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "lib": ["dom", "es5", "es6", "es7", "es2019"],
        "allowSyntheticDefaultImports": true,
        "isolatedModules": true,
        "esModuleInterop": true
    },
    "include": ["src/**/*.ts", "tests/**/*.ts"]
}
